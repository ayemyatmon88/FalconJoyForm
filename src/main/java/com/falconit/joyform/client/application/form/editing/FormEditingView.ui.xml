<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:m.addins="urn:import:gwt.material.design.addins.client"
             xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
             xmlns:demo="urn:import:com.falconit.joyform.client.ui">
    <m:MaterialPanel>

                    
        <m:MaterialRow addStyleNames="code" grid="l12 m12 s12" height="2000px">

            <ma:stepper.MaterialStepper ui:field="stepper" detectOrientation="true">
                    
                <ma:stepper.MaterialStep step="1" title="Apps" description="Apps and tasks" >
                 <m:MaterialPanel width="100%">
                     <combobox:MaterialComboBox ui:field="cbocontainer" grid="l12 m12 s12" label="Project Name"/>
                     <combobox:MaterialComboBox ui:field="cboprocess" grid="l12 m12 s12" label="Process Name"/>
                     <combobox:MaterialComboBox ui:field="cboformtype" grid="l12 m12 s12" label="Form form"/>
                     <m:MaterialTextBox ui:field="txtformName" grid="l12 m12 s12"  label="Form name" allowBlank="false" autoValidate="true"/>
                 </m:MaterialPanel>
                 <m:MaterialButton ui:field="btnContinue1" text="Continue" grid="l4" marginTop="12" textColor="WHITE" waves="DEFAULT"/>
                 <m:MaterialButton ui:field="btnPrev1" text="Cancel" grid="l4" marginTop="12" type="FLAT" waves="DEFAULT"/>
                </ma:stepper.MaterialStep>
                
                <ma:stepper.MaterialStep step="2" title="Process field data" description="The datum you want to work or you need" >
                 <m:MaterialPanel width="100%" ui:field="fieldholder" >
                     
                 </m:MaterialPanel>
                 <m:MaterialButton ui:field="btnContinue2" text="Continue" grid="l4" marginTop="12" textColor="WHITE" waves="DEFAULT"/>
                 <m:MaterialButton ui:field="btnPrev2" text="Back" grid="l4" marginTop="12" type="FLAT" waves="DEFAULT"/>
                </ma:stepper.MaterialStep>
                
                <ma:stepper.MaterialStep step="3" title="Design" description="Make your form design" >
                 <m:MaterialPanel width="100%" ui:field="holder" >
                 </m:MaterialPanel>
                 <m:MaterialButton ui:field="btnContinue3" text="Continue" grid="l4" marginTop="12" textColor="WHITE" waves="DEFAULT"/>
                 <m:MaterialButton ui:field="btnPrev3" text="Back" grid="l4" marginTop="12" type="FLAT" waves="DEFAULT"/>
                </ma:stepper.MaterialStep>
                
                <ma:stepper.MaterialStep step="4" title="Workflow" description="design your app's workflows" >
                 <m:MaterialPanel width="100%" >
                     <m:MaterialLabel text="this process is under development and try on business central" grid="l12 m12 s12"/>
                 </m:MaterialPanel>
                 <m:MaterialButton ui:field="btnContinue4" text="Finish" grid="l4" marginTop="12" textColor="WHITE" waves="DEFAULT"/>
                 <m:MaterialButton ui:field="btnPrev4" text="Back" grid="l4" marginTop="12" type="FLAT" waves="DEFAULT"/>
                </ma:stepper.MaterialStep>
                
            </ma:stepper.MaterialStepper>
                <!--
                <m:MaterialTextArea ui:field="txtbrief" grid="l12 m12 s12" placeholder="to json result" resizeRule="FOCUS" />
                -->
            </m:MaterialRow>
             
        
    </m:MaterialPanel>
</ui:UiBinder>
