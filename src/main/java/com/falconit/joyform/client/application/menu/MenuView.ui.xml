<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                xmlns:m="urn:import:gwt.material.design.client.ui"
                xmlns:ma="urn:import:gwt.material.design.addins.client"
                xmlns:incubator="urn:import:gwt.material.design.incubator.client"
                xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

        <ui:with field="i18n" type="com.falconit.joyform.client.resources.MyLang"/>
	<ui:with field="tokens" type="com.falconit.joyform.client.place.NameTokens"/>

	<ui:style>
            
		@external .sidebar, .nav-wrapper, .select2-selection__rendered;
		.sidebar {
			padding: 10% !important;
			font-size: 0.75em;
			margin-left: -20px;
			margin-right: -20px;
                        font-family: 'Roboto';
		}
		.sidebar a {
			padding: 0 !important;
		}
		.sidebar a, .sidebar i{
			line-height: 1 !important;
			height: 0 !important;
		}
		.sidebar i {
			line-height: 0.5 !important;
		}

		nav {
			box-shadow: none;
		}
		.nav-wrapper{
			margin: 0;
		}
		.logo {
			padding: 10px;
			border-bottom: 1px solid #E9E9E9;
		}
		.btnGettingStarted {
			font-size: 1em !important;
			margin-top: 20px;
		}
                
	</ui:style>

	<m:MaterialPanel>
		<m:MaterialHeader ui:field="header" marginTop="-56" width="100%">
			<m:MaterialNavBar ui:field="navBar" width="100%" backgroundColor="BLUE" activates="sideBar" textColor="WHITE">
                            <m:MaterialNavBrand paddingLeft="5" text="falconIT" />
				<m:MaterialLink ui:field="btnSearch" iconType="SEARCH" iconColor="WHITE" float="RIGHT" visible="false"/>
				
                                <m:MaterialImage ui:field="photo" visible="false" activates="dp6" url="falconIT-logo.png" marginTop="15" marginRight="15" circle="true" width="40px" height="40px" float="RIGHT"/>
                                
                                <incubator:language.LanguageSelector ui:field="languageSelector" title="Language" float="RIGHT"/>
                                
                                <ma:combobox.MaterialComboBox ui:field="comboThemes" textColor="WHITE" width="110px" label="Select Theme" marginRight="5" float="RIGHT" visible="true"/>
                                <!--
                                <m:MaterialLink ui:field="logout" visible="false" float="RIGHT" iconType="EXIT_TO_APP" marginLeft="7" marginRight="7" tooltip="Logout" textColor="WHITE" waves="LIGHT" />
                                
                                <m:MaterialLink activates="dp6" ui:field="account" text="Welcome" visible="false" float="RIGHT" marginRight="15" iconPosition="RIGHT" iconType="ACCOUNT_CIRCLE" textColor="WHITE" waves="LIGHT" />
                                -->
                                <!--
                                <m:MaterialLink float="RIGHT" iconType="NOTIFICATIONS_ACTIVE" marginRight="30" tooltip="Notifications" textColor="WHITE" waves="LIGHT" ui:field="notifications" iconPosition="NONE" >
                                    <m:MaterialBadge backgroundColor="RED" text="6" textColor="WHITE"  activates="dp-5" />
                                </m:MaterialLink>
                                -->
                                
                            <m:MaterialDropDown activator="dp6" belowOrigin="true" constrainWidth="false">
                                <m:MaterialLink text="Account home" targetHistoryToken="{tokens.getWelcome}" textColor="BLACK" iconType="HOME"/>
                                <m:MaterialLink text="Profile" targetHistoryToken="{tokens.getPersonal}" textColor="BLACK" iconType="EDIT"/>
                                <m:MaterialLink ui:field="logout" text="Logout" textColor="BLACK" iconType="LOCK"/>
                            </m:MaterialDropDown>
			</m:MaterialNavBar>

			<m:MaterialNavBar ui:field="navBarSearch" visible="false">
				<m:MaterialSearch ui:field="txtSearch" placeholder="Component" backgroundColor="WHITE" iconColor="BLACK" active="true" shadow="1"/>
			</m:MaterialNavBar>
		</m:MaterialHeader>

        <!-- Account Dropdown 
           <m:MaterialDropDown activator="dp-5" constrainWidth="false">
            <m:MaterialLink text="Profile" textColor="BLACK" iconType="EDIT" targetHistoryToken="{tokens.getPersonal}"/>
            <m:MaterialLink ui:field="lnkLogout" text="Logout" textColor="BLACK" iconType="EXIT_TO_APP" />
           </m:MaterialDropDown>
           -->
        
		<m:MaterialSideNavPush ui:field="sideNav" m:id="sideBar" width="300" textColor="WHITE" withHeader="true" allowBodyScroll="true" showOnAttach="false" >
                    <!--
                    <m.html:ListItem waves="DEFAULT" paddingBottom="22">
                        <ma:webp.MaterialWebpImage width="50%" url="https://falconbreeze.com/wp-content/uploads/2019/05/falconBREEZE_icon.png" fallbackExtension="png" addStyleNames="{style.logo}"/>
                    </m.html:ListItem>
                    -->
                        <m:MaterialCollapsible ui:field="mnuapps">
                            <m:MaterialCollapsibleItem>
                                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                                            <m:MaterialLink text="Apps" iconType="APPS" textColor="WHITE" separator="true"/>
                                    </m:MaterialCollapsibleHeader>
                                    <m:MaterialCollapsibleBody>
                                            <m.html:UnorderedList>
                                                    <m:MaterialLink targetHistoryToken="{tokens.getDashboard}" text="Dashboard" waves="DEFAULT"/>
                                                    <m:MaterialLink href="#formediting" text="Create Apps" waves="DEFAULT"/>
                                            </m.html:UnorderedList>
                                    </m:MaterialCollapsibleBody>
                            </m:MaterialCollapsibleItem>
			</m:MaterialCollapsible>

                        <!-- for end users -->
                        <!--
                        <m.html:ListItem waves="DEFAULT">
				<m:MaterialLink targetHistoryToken="{tokens.getTasklist}" iconPosition="LEFT" textColor="WHITE" iconType="NOTIFICATIONS_ACTIVE" text="Notifications" separator="true" layoutPosition="RELATIVE">
                                        <m:MaterialBadge ui:field="badgenoti" backgroundColor="TEAL" text="0" textColor="WHITE" />
                                </m:MaterialLink>
			</m.html:ListItem>
                        -->
                                                
                        <m.html:ListItem waves="DEFAULT" ui:field="lstdashboard">
                            <m:MaterialLink targetHistoryToken="{tokens.getDashboard}" textColor="WHITE" iconPosition="LEFT" iconType="APPS" text="Dashboard" separator="true" />
                                
			</m.html:ListItem>
                        <m.html:ListItem waves="DEFAULT" ui:field="lstinbox">
                            <m:MaterialLink targetHistoryToken="{tokens.getTasklist}" textColor="WHITE" iconPosition="LEFT" iconType="INBOX" text="Task inbox" separator="true" layoutPosition="RELATIVE">
                                <m:MaterialBadge ui:field="badgeinbox" backgroundColor="TEAL" text="0 active" textColor="WHITE" />
                            </m:MaterialLink>
			</m.html:ListItem>
                        <m.html:ListItem waves="DEFAULT" ui:field="lstapps">
				<m:MaterialLink targetHistoryToken="{tokens.getPrivateapps}" textColor="WHITE" iconPosition="LEFT" iconType="APPS" text="My Apps" separator="true" />       
			</m.html:ListItem>
                        <m.html:ListItem waves="DEFAULT" ui:field="lstanalytics">
                            <m:MaterialLink targetHistoryToken="{tokens.getWelcome}" textColor="WHITE" iconPosition="LEFT" iconType="POLL" text="Data &amp; analytics" separator="true" />       
			</m.html:ListItem>
                                                
                        <m:MaterialCollapsible ui:field="mnustart">
                            <m:MaterialCollapsibleItem>
                                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                                            <m:MaterialLink text="Guides" iconType="INFO_OUTLINE" textColor="WHITE" separator="true"/>
                                    </m:MaterialCollapsibleHeader>
                                    <m:MaterialCollapsibleBody>
                                            <m.html:UnorderedList>
                                                <m:MaterialLink iconPosition="LEFT" iconType="TRENDING_UP" text="Overview" />
                                                <m:MaterialLink iconPosition="LEFT" iconType="DEVELOPER_BOARD" text="Tutorials" />
                                                <m:MaterialLink iconPosition="LEFT" iconType="EXTENSION" text="API &amp; integrations"/>       
			
                                            </m.html:UnorderedList>
                                    </m:MaterialCollapsibleBody>
                            </m:MaterialCollapsibleItem>
			</m:MaterialCollapsible>
                        
                        <m.html:ListItem waves="DEFAULT">
                            <m:MaterialLink textColor="WHITE" iconPosition="LEFT" iconType="SECURITY" text="Security" separator="true" />       
			</m.html:ListItem>
                        
                        <m.html:ListItem waves="DEFAULT">
                            <m:MaterialLink textColor="WHITE" iconPosition="LEFT" iconType="BEENHERE" text="Privacy" separator="true" />       
			</m.html:ListItem>
                        
                        <m.html:ListItem waves="DEFAULT">
                            <m:MaterialLink textColor="WHITE" iconPosition="LEFT" iconType="FEEDBACK" text="Feedback" separator="true" />       
			</m.html:ListItem>
<!--
			<m:MaterialCollapsible>
				<m:MaterialCollapsibleItem>
					<m:MaterialCollapsibleHeader waves="DEFAULT">
						<m:MaterialLink text="For testing only" iconType="POLL"/>
					</m:MaterialCollapsibleHeader>
					<m:MaterialCollapsibleBody>
						<m.html:UnorderedList>
                                                    <m:MaterialLink targetHistoryToken="{tokens.getFormeditor}" text="Test Form" iconType="ASSIGNMENT" waves="DEFAULT"/>
                                                    <m:MaterialLink targetHistoryToken="{tokens.getFormediting}" text="Create New Form" iconType="EDIT" waves="DEFAULT"/>
						</m.html:UnorderedList>
					</m:MaterialCollapsibleBody>
				</m:MaterialCollapsibleItem>
			</m:MaterialCollapsible>
                        -->
                        
		</m:MaterialSideNavPush>
	</m:MaterialPanel>
</ui:UiBinder>